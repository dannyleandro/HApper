<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:scrollbars="none"
    tools:context="com.moviles.happer.DetalleAlarmaActivity" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:isScrollContainer="true"
        android:orientation="vertical"
        android:scrollbarAlwaysDrawVerticalTrack="false"
        android:scrollbars="none" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/lbl_Nombre"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/lblNombreAlarma"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:text="@string/lbl_Nombre"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/darker_gray" />
    
        <TextView
            android:id="@+id/textView2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/lbl_Descripcion"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/lblDescripcion"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:text="@string/lbl_Descripcion"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/darker_gray" />
        
        <TextView
            android:id="@+id/txtImagen"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/lbl_Imagen"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        
        <ImageView
            android:id="@+id/imgAlarma"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:src="@drawable/abc_ab_stacked_solid_light_holo" 
            android:contentDescription="@string/cd_Imagen" />
        
		<TextView
            android:id="@+id/textView5"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/lbl_Fecha_Creacion"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        
		<TextView
		    android:id="@+id/lblFechaCreacion"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:paddingBottom="20dp"
		    android:paddingTop="20dp"
		    android:text="@string/lbl_Fecha_Creacion"
		    android:textAppearance="?android:attr/textAppearanceLarge"
		    android:textColor="@android:color/darker_gray" />
        
        <TextView
            android:id="@+id/textView3"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/lbl_Fecha_Lanzamiento"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/lblFechaLanzamiento"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:text="@string/lbl_Fecha_Lanzamiento"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/darker_gray" />
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:paddingTop="20dp" >

            <Button
                android:id="@+id/btnAceptarDetalleAlarma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="aceptarDetalleAlarma"
                android:text="@string/btn_Aceptar"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnModificarAlarma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="modificarAlarma"
                android:text="@string/btn_Modificar"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnEliminarAlarma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="eliminarAlarma"
                android:text="@string/btn_Eliminar"
                android:textSize="18sp" />
            
        </LinearLayout>

    </LinearLayout>
</ScrollView>